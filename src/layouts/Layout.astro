---
import Navbar from "./Navbar.tsx";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="bg-darkgray">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Navbar client:load />
    <slot />
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  :root {
    --accent-500: 255, 102, 0;
    --accent-400: 255, 132, 0;
  }

  @font-face {
    font-family: "Kuunari Bold";
    font-style: normal;
    font-weight: 300 700;
    font-display: swap;
    src: url("/fonts/kuunari-bold.otf") format("opentype");
  }

  @font-face {
    font-family: "Kuunari Bold Condensed";
    font-style: normal;
    font-weight: 700;
    font-display: swap;
    src: url("/fonts/kuunari-bold-condensed.otf") format("opentype");
  }

  @font-face {
    font-family: "Kuunari Medium";
    font-style: normal;
    font-weight: 300 700;
    font-display: swap;
    src: url("/fonts/kuunari-medium.otf") format("opentype");
  }

  @font-face {
    font-family: "Kuunari Light";
    font-style: normal;
    font-weight: 300;
    font-display: swap;
    src: url("/fonts/kuunari-light.otf") format("opentype");
  }

  @font-face {
    font-family: "Kuunari Regular";
    font-style: normal;
    font-weight: 300;
    font-display: swap;
    src: url("/fonts/kuunari-regular.otf") format("opentype");
  }

  .font-kuunari-bold {
    font-family: "Kuunari Bold", sans-serif;
  }

  .font-kuunari-bold-condensed {
    font-family: "Kuunari Bold Condensed", sans-serif;
  }

  .font-kuunari-medium {
    font-family: "Kuunari Medium", sans-serif;
  }

  .font-kuunari-regular {
    font-family: "Kuunari Regular", sans-serif;
  }

  .font-kuunari-light {
    font-family: "Kuunari Light", sans-serif;
  }
</style>
