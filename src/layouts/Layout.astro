---
import Navbar from "./Navbar";
import Footer from "../components/Footer";
import { SEOMetadata } from "astro-seo-metadata";
import { getLangFromUrl } from '../i18n/utils';

interface Props {
  title?: string;
}

const { title = "Export3D - Visualización Arquitectónica" } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<!doctype html>
<html lang={lang} class="bg-darkgray">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <SEOMetadata
      siteName={"Export3d"}
      title={title}
      description={"Transformamos visiones en realidades arquitectónicas, fusionando innovación y precisión en cada proyecto. Especialistas en visualización arquitectónica, proyecto y dirección de obra."}
      image={"/og-image.jpg"}
      favicon={"/favicon.png"}
      author="Export3d"
      copyright="Export3d"
      astroSitemap={true}
      canonicalUrl={Astro.url.toString()}
      type={"website"}
      astroGenerator={true}
    />
    <title>{title}</title>
    <script type="text/javascript">
      (function (c, l, a, r, i, t, y) {
        c[a] =
          c[a] ||
          function () {
            (c[a].q = c[a].q || []).push(arguments);
          };
        t = l.createElement(r);
        t.async = 1;
        t.src = "https://www.clarity.ms/tag/" + i;
        y = l.getElementsByTagName(r)[0];
        y.parentNode.insertBefore(t, y);
      })(window, document, "clarity", "script", "rfwx56igij");
    </script>
  </head>
  <body class="bg-darkgray min-h-screen">
    <Navbar lang={lang} client:load />
    <slot />
    <Footer lang={lang} client:load />
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  @font-face {
    font-family: "Kuunari Bold";
    font-style: normal;
    font-weight: 300 700;
    font-display: swap;
    src: url("/fonts/kuunari-bold.otf") format("opentype");
  }
  @font-face {
    font-family: "Kuunari Bold Condensed";
    font-style: normal;
    font-weight: 700;
    font-display: swap;
    src: url("/fonts/kuunari-bold-condensed.otf") format("opentype");
  }
  @font-face {
    font-family: "Kuunari Medium";
    font-style: normal;
    font-weight: 300 700;
    font-display: swap;
    src: url("/fonts/kuunari-medium.otf") format("opentype");
  }
  @font-face {
    font-family: "Kuunari Light";
    font-style: normal;
    font-weight: 300;
    font-display: swap;
    src: url("/fonts/kuunari-light.otf") format("opentype");
  }
  @font-face {
    font-family: "Kuunari Regular";
    font-style: normal;
    font-weight: 300;
    font-display: swap;
    src: url("/fonts/kuunari-regular.otf") format("opentype");
  }
</style>
