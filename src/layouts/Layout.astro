---
import Navbar from "./Navbar.tsx";
---

<!doctype html>
<html lang="en" class="bg-darkgray">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
  </head>
  <body>
    <Navbar client:load />
    <slot />
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  @font-face {
    font-family: "Kuunari Bold";
    font-style: normal;
    font-weight: 300 700;
    font-display: swap;
    src: url("/fonts/kuunari-bold.otf") format("opentype");
  }
  @font-face {
    font-family: "Kuunari Bold Condensed";
    font-style: normal;
    font-weight: 700;
    font-display: swap;
    src: url("/fonts/kuunari-bold-condensed.otf") format("opentype");
  }
  @font-face {
    font-family: "Kuunari Medium";
    font-style: normal;
    font-weight: 300 700;
    font-display: swap;
    src: url("/fonts/kuunari-medium.otf") format("opentype");
  }
  @font-face {
    font-family: "Kuunari Light";
    font-style: normal;
    font-weight: 300;
    font-display: swap;
    src: url("/fonts/kuunari-light.otf") format("opentype");
  }
  @font-face {
    font-family: "Kuunari Regular";
    font-style: normal;
    font-weight: 300;
    font-display: swap;
    src: url("/fonts/kuunari-regular.otf") format("opentype");
  }
</style>
