---
import background from "../assets/background.jpg";
---

<div class="relative w-[calc(100%-6rem)] h-[calc(100%-6rem)] mx-auto mt-[64px]">
  <div
    class="w-[100%] h-[100%] bg-gradientOverlayHero absolute z-10 rounded-md"
  >
  </div>
  <img
    class="absolute w-[100%] h-full z-0 rounded-md object-cover"
    src={background.src}
    alt=""
    fetchpriority="high"
  />
  <main class="py-20 px-20 mx-auto z-20 relative h-full main">
    <section
      class="text-white text-shadow-sm shadow-black flex flex-col gap-y-6 h-full justify-between"
    >
      <div class="flex flex-col">
        <h1 class="text-[120px] font-bold font-kuunari-bold-condensed">
          Export<span class="text-accent-500">3D</span>.
        </h1>
        <h2
          class="text-[2rem] tracking-tight text-white font-kuunari-regular mt-[-30px]"
        >
          Selected Works 2024 - 2025.
        </h2>
      </div>

      <div class="">
        <h2 class="text-[3.5rem] tracking-tight text-white font-kuunari-bold">
          Diseños exportados a la realidad.
        </h2>
        <p
          class="text-[2rem] text-white font-kuunari-bold-condensed mt-[-60px]"
        >
          <span class="font-kuunari-bold text-accent-500"
            ><br />
            Visualización Arquitectónica</span
          > / <span class="font-kuunari-bold text-accent-500">
            Diseño y Dirección de Obra</span
          >.
        </p>
        <button
          ><a class="text-white text-[2rem] font-kuunari-regular" href=""
            >Contactanos</a
          ></button
        >
      </div>
    </section>
  </main>
</div>
