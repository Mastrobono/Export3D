---
import Container from "../layouts/Container";

const containerProps = {
  classNames: "relative min-h-[max-content] overflow-hidden bg-darkgray",
};
---

<section class="relative min-h-[max-content] overflow-hidden bg-darkgray w-full" data-section="cta">
  {/* Background effects */}
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-gradient-to-b from-darkgray/50 to-darkgray">
    </div>
    <div
      class="absolute inset-0 bg-[radial-gradient(circle_at_center,rgba(255,255,255,0.03)_0%,transparent_70%)]"
    >
    </div>
  </div>

  <div class="relative z-10 mx-auto max-w-7xl px-6 py-24 sm:py-32">
    <div class="grid lg:grid-cols-2 gap-16 items-start">
      {/* Left side - Content */}
      <div>
        <h2
          class="text-4xl font-semibold tracking-tight text-white sm:text-5xl font-kuunari-medium"
        >
          Let's Get In Touch.<br />
          <span class="text-2xl sm:text-3xl text-accent-500 mt-2 block"
            >Transform your vision into reality.</span
          >
        </h2>
        <p class="mt-6 text-lg leading-8 text-white/80">
          Your next architectural masterpiece awaits. Whether you need stunning
          visualizations or expert project guidance, we're here to help bring
          your ideas to life.
        </p>
      </div>

      {/* Right side - Contact Form */}
      <form
        class="bg-darkgray/30 backdrop-blur-sm rounded-2xl p-8 border border-white/10"
      >
        <div class="space-y-6">
          <div>
            <label
              for="name"
              class="block text-sm font-kuunari-medium text-white">Nombre</label
            >
            <input
              type="text"
              name="name"
              id="name"
              class="mt-2 block w-full rounded-md border-0 bg-white/5 px-4 py-3 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-accent-500 sm:text-sm sm:leading-6"
              placeholder="Tu nombre"
            />
          </div>

          <div>
            <label
              for="email"
              class="block text-sm font-kuunari-medium text-white">Email</label
            >
            <input
              type="email"
              name="email"
              id="email"
              class="mt-2 block w-full rounded-md border-0 bg-white/5 px-4 py-3 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-accent-500 sm:text-sm sm:leading-6"
              placeholder="tu@email.com"
            />
          </div>

          <div>
            <label
              for="project_type"
              class="block text-sm font-kuunari-medium text-white"
              >Tipo de Proyecto</label
            >
            <select
              id="project_type"
              name="project_type"
              class="mt-2 block w-full rounded-md border-0 bg-white/5 px-4 py-3 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-accent-500 sm:text-sm sm:leading-6"
            >
              <option value="" disabled selected>Selecciona una opción</option>
              <option value="visualization">Visualización Arquitectónica</option
              >
              <option value="project_management">Dirección de Obra</option>
              <option value="both">Ambos Servicios</option>
            </select>
          </div>

          <div>
            <label
              for="message"
              class="block text-sm font-kuunari-medium text-white"
              >Mensaje</label
            >
            <textarea
              id="message"
              name="message"
              rows="4"
              class="mt-2 block w-full rounded-md border-0 bg-white/5 px-4 py-3 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-accent-500 sm:text-sm sm:leading-6"
              placeholder="Cuéntanos sobre tu proyecto..."></textarea>
          </div>

          <div>
            <button
              type="submit"
              class="w-full inline-flex items-center justify-center rounded-md bg-accent-500 px-5 py-3.5 text-base font-semibold text-darkgray shadow-sm hover:bg-accent-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-accent-500 transition-all duration-300 font-kuunari-medium"
            >
              Iniciar Proyecto
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
                class="w-5 h-5 ml-2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3"></path>
              </svg>
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>

<style>
  /* Subtle animation for the gradient */
  .bg-gradient-to-b {
    animation: gradientShift 15s ease-in-out infinite;
  }

  @keyframes gradientShift {
    0%,
    100% {
      background-position: 0% 0%;
    }
    50% {
      background-position: 0% 100%;
    }
  }

  /* Input and textarea autofill styles */
  input:-webkit-autofill,
  input:-webkit-autofill:hover,
  input:-webkit-autofill:focus,
  textarea:-webkit-autofill,
  textarea:-webkit-autofill:hover,
  textarea:-webkit-autofill:focus,
  select:-webkit-autofill,
  select:-webkit-autofill:hover,
  select:-webkit-autofill:focus {
    -webkit-text-fill-color: white;
    -webkit-box-shadow: 0 0 0px 1000px transparent inset;
    transition: background-color 5000s ease-in-out 0s;
  }
</style>
