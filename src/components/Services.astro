---
import Container from "../layouts/Container.tsx";
import { Image } from "astro:assets";
import visualizationImage from "../assets/background.webp";
import designImage from "../assets/background.webp";
---

<section id="services" class="py-32 bg-darkgray relative overflow-hidden">
  <Container classNames="relative z-10">
    <div class="max-w-7xl mx-auto">
      <div class="space-y-32">
        <h2 class="text-[4rem] font-semibold tracking-tight text-white font-kuunari-medium">
          Servicios
        </h2>

        {/* Visualization Service - Image Left */}
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
          <div class="group">
            <div class="relative rounded-2xl overflow-hidden aspect-[4/3]">
              <Image
                src={visualizationImage}
                alt="Visualización Arquitectónica"
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                width={800}
                height={600}
              />
              <div class="absolute inset-0 bg-gradient-to-t from-darkgray/90 via-darkgray/50 to-transparent" />
            </div>
          </div>
          <div class="space-y-6">
            <h3 class="text-[2.5rem] font-kuunari-bold text-white">
              Visualización Arquitectónica
            </h3>
            <p class="text-[1.5rem] leading-relaxed text-white/80 font-kuunari-light">
              Transformamos tus proyectos en visualizaciones impactantes que comunican la esencia de tu diseño.
            </p>
            <a
              href="/services/visualization"
              class="inline-flex items-center gap-4 text-accent-500 text-[1.5rem] font-kuunari-regular hover:text-accent-400 transition-colors duration-300 group"
            >
              Explorar servicio
              <svg
                class="w-5 h-5 transform group-hover:translate-x-1 transition-transform duration-300"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 8l4 4m0 0l-4 4m4-4H3"
                />
              </svg>
            </a>
          </div>
        </div>

        {/* Design Service - Text Left */}
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
          <div class="space-y-6 lg:order-first">
            <h3 class="text-[2.5rem] font-kuunari-bold text-white">
              Diseño y Dirección de Obra
            </h3>
            <p class="text-[1.5rem] leading-relaxed text-white/80 font-kuunari-light">
              Llevamos tus proyectos desde el concepto hasta la realización, garantizando excelencia en cada etapa.
            </p>
            <a
              href="/services/design"
              class="inline-flex items-center gap-4 text-accent-500 text-[1.5rem] font-kuunari-regular hover:text-accent-400 transition-colors duration-300 group"
            >
              Explorar servicio
              <svg
                class="w-5 h-5 transform group-hover:translate-x-1 transition-transform duration-300"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17 8l4 4m0 0l-4 4m4-4H3"
                />
              </svg>
            </a>
          </div>
          <div class="group lg:order-last">
            <div class="relative rounded-2xl overflow-hidden aspect-[4/3]">
              <Image
                src={designImage}
                alt="Diseño y Dirección de Obra"
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                width={800}
                height={600}
              />
              <div class="absolute inset-0 bg-gradient-to-t from-darkgray/90 via-darkgray/50 to-transparent" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </Container>
</section>
