---
import Layout from "../../layouts/Layout.astro";
import Container from "../../layouts/Container.tsx";

// Mock data
const project = {
  imageUrl: "/assets/features/haus.webp",
  metadata: {
    title: "HAUS",
    location: "Buenos Aires, Argentina",
    date: "2025",
    client: "Steel Tech Group",
    tags: ["Residencial", "En construcci칩n"]
  }
};
---

<Layout>
  <Container class="min-h-screen bg-lightgray">
    <div class="relative w-full h-[70vh] overflow-hidden">
      {/* Imagen de fondo con overlay */}
      <img
        src={project.imageUrl}
        alt={project.metadata.title}
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-black/50 to-black/80"></div>

      {/* Contenido sobre la imagen */}
      <div class="absolute inset-0 flex flex-col justify-end p-8 sm:p-12 md:p-20">
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-kuunari-bold text-white mb-4">
          {project.metadata.title}
        </h1>
        <div class="flex flex-wrap gap-4 mb-8">
          {project.metadata.tags.map((tag) => (
            <span class="px-4 py-2 bg-accent-500/20 text-accent-500 rounded-full text-sm font-kuunari-medium">
              {tag}
            </span>
          ))}
        </div>
      </div>
    </div>

    {/* Informaci칩n del proyecto */}
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-16">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
        <div>
          <h3 class="text-accent-500 font-kuunari-bold mb-2">Ubicaci칩n</h3>
          <p class="text-white font-kuunari-light">{project.metadata.location}</p>
        </div>
        <div>
          <h3 class="text-accent-500 font-kuunari-bold mb-2">Cliente</h3>
          <p class="text-white font-kuunari-light">{project.metadata.client}</p>
        </div>
        <div>
          <h3 class="text-accent-500 font-kuunari-bold mb-2">A침o</h3>
          <p class="text-white font-kuunari-light">{project.metadata.date}</p>
        </div>
      </div>

      <div class="prose prose-invert max-w-none">
        <h2 class="text-2xl sm:text-3xl font-kuunari-bold text-white mb-6">Sobre el Proyecto</h2>
        <p class="text-white/80 font-kuunari-light text-lg leading-relaxed">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
        </p>
      </div>
    </div>
  </Container>
</Layout>
