---
import ProjectsFilter from "../../../components/ProjectsFilter.tsx";
import Layout from "../../../layouts/Layout.astro";
import ContactForm from "../../../components/ContactForm.tsx";
import { getLangFromUrl } from '../../../i18n/utils';

// Validar que el idioma sea v√°lido
const lang = getLangFromUrl(Astro.url);
if (lang !== 'es' && lang !== 'en') {
  return Astro.redirect('/es/projects');
}
---

<Layout>
  <ProjectsFilter client:load lang={lang} />
  <ContactForm client:load isOpen={false} onClose={() => {}} />
</Layout> 