import WithSplitImage from "../components/WithSplitImage";
import Container from "../layouts/Container";

const projects = [
  {
    imageUrl:
      "../src/assets/features/arce.png",
    imagePosition: "left" as "left",
    projectDetails: {
      title: "Proyecto ARCE",
      location: "Buenos Aires, Argentina",
      year: 2024,
      client: "ARCE Construcciones",
      role: "Visualización",
      buildingType: "Residencial",
      status: "En construcción",
    },
  },
  {
    imageUrl:
      "../src/assets/features/haus.jpg",
    imagePosition: "right" as "right",
    projectDetails: {
      title: "Proyecto HAUS",
      location: "Buenos Aires, Argentina",
      year: 2025,
      client: "Steel Tech Group",
      role: "Visualización",
      buildingType: "Residencial",
      status: "En construcción",
    },
  },
  {
    imageUrl:
      "../src/assets/features/hutch.png",
    imagePosition: "left" as "left",
    projectDetails: {
      title: "Proyecto HUTCH",
      location: "Ciudad Jardin, Buenos Aires, Argentina",
      year: 2024,
      client: "HUTCH",
      role: "Visualización",
      buildingType: "Comercial",
      status: "Finalizado",
    },
  },
  {
    imageUrl:
      "https://tailwindui.com/plus/img/ecommerce-images/confirmation-page-01-hero.jpg",
    imagePosition: "right" as "right",
    projectDetails: {
      title: "Proyecto Meat Frisbee",
      location: "Buenos Aires, Argentina",
      year: 2025,
      client: "Meat Frisbee",
      role: "Proyecto, Dirección y Ejecuución de Obra",
      buildingType: "Comercial",
      status: "Finalizado",
    },
  },
];
---

<Layout>
  <Hero />
  <Header />
  {
    projects.map((project) => (
      <WithSplitImage
        key={project.projectDetails.title}
        imagePosition={project.imagePosition}
        imageUrl={project.imageUrl}
        projectDetails={project.projectDetails}
      />
    ))
  }
</Layout>

